def main():
    # Create an empty list to store family member names
    family_members = []

    # Ask the user to input the names of family members
    print("Please enter the names of your family members. Enter 'done' when finished.")
    while True:
        name = input("Name: ")
        if name.lower() == 'done':
            break
        family_members.append(name)

    # Print each family member separately
    print("\nList of family members:")
    for member in family_members:
        print(member)

if __name__ == "__main__":
    main()


